<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/cityEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:foregroundGravity="center"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="@string/writeCity"
            tools:targetApi="o"/>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:text="@string/goWeatherActivity"/>

        <CheckBox
            android:id="@+id/tempCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Показать температуру"/>

        <CheckBox
            android:id="@+id/powCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Показать давление"/>

        <CheckBox
            android:id="@+id/waterCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Показать влажность"/>

        <CheckBox
            android:id="@+id/windCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ветер"/>

        <Switch
            android:id="@+id/osadkiSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Осадки"/>
    </LinearLayout>

</FrameLayout>